---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <script type="module">const o=document.querySelectorAll("#theme-selector div[data-theme]"),a=window.localStorage.getItem("data-theme");t(a||"lofi");o.forEach(e=>{e.addEventListener("click",()=>{t(e.getAttribute("data-theme"))})});function t(e){document.querySelector("html").setAttribute("data-theme",e),window.localStorage.setItem("data-theme",e)}
</script>
  </head>
  <body>
    <div class="bg-base-100 drawer drawer-mobile">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 max-w-[900px]">
            <slot />
          </main>
        </div>
        <Footer />
      </div>
      <SideBar />
    </div>
  </body>
</html>
